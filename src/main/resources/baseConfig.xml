<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
	<!-- window configuration -->
	<config c="Integer" name="window_width">1000</config>
	<config c="Integer" name="window_height">600</config>
	<config c="Boolean" name="window_center">true</config>

	<!-- app configuration -->
	<config c="String" name="app_language">en</config>


	<!-- storage configuration -->
	<config c="String" name="directory_default">#{fx.soft.pixelengine.system.OS|HOME}/.PixelEngine</config>
	<config c="String" name="directory_projects">{{directory_default}}/projects</config>
	<config c="String" name="default_output_format">png</config>

	<!-- online configuration -->
	<config c="Boolean" name="show_online_notifications">true</config>
</configuration>